  %title
  %meta{name: "author", content: ""}
  %link{href: "/atom.xml", rel: "alternate", title: "", type: "application/atom+xml"}
  %link{rel: "canonical", href: ""}

%body
  %header{role: "banner"}
    %hgroup
      %h1
        %a{href: "/"}
      %h2
  %nav{role: "navigation"}
    %ul.subscription{"data-subscription" => "rss"}
      %li
        %a{href: "/atom.xml", rel: "subscribe-rss", title: "subscribe via RSS"} RSS
    %form{action: "http://google.com/search", method: "get"}
      %fieldset{role: "search"}
        %input{name: "q", value: "site:", type:"hidden"}
        %input.search{name: "q", results: "0", placeholder: "Search", type: "text"}
    %ul.main-navigation
      %li
        %a{href: "/"} Blog
      %li
        %a{href: "/archives"} Archives
  #main
    #content
      %div
      %aside.sidebar
        %section
          %h1 Abount Me
          %p A little something about me.
        %section
          %h1 Recent Posts
        %section
          %h1 Sponsor
          %p
            :plain
              <script type="text/javascript"><!--
              google_ad_client = "ca-pub-0197736592215392";
