<h1>Listing Pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for page in @pages: %>  
  <tr class="item" data-id="<%= page.id %>">
    <td><%= page.name %></td>
    <td><%= page.body %></td>
    <td><a data-type="show">Show</a></td>
    <td><a data-type="edit">Edit</a></td>
    <td><a data-type="destroy">Destroy</a></td>
  </tr>
<% end %>

</table>

<br />

<a data-type="new">New Page</a>