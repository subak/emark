<h1>New Page</h1>

<form>
  
  <label>
    <span>Name</span>
    <input 
      type="text" name="name" 
      value="<%= @name %>" required autofocus>
  </label>
  
  <label>
    <span>Body</span>
    <input 
      type="text" name="body" 
      value="<%= @body %>">
  </label>
  
  <button>Create</button>

</form>